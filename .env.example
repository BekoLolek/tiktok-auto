# TikTok Auto Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ===================
# Database Configuration
# ===================
POSTGRES_USER=tiktok_auto
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=tiktok_auto
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ===================
# Redis Configuration
# ===================
REDIS_HOST=redis
REDIS_PORT=6379

# ===================
# Elasticsearch Configuration
# ===================
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200

# ===================
# Reddit API Credentials
# ===================
# Create an app at https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_SECRET=your_secret_here
REDDIT_USER_AGENT=TikTokAuto/1.0 (by /u/your_username)

# Subreddits to fetch from (comma-separated)
REDDIT_SUBREDDITS=scifi,fantasy,tifu,nosleep

# ===================
# TikTok Configuration
# ===================
# Path to store TikTok session cookies
TIKTOK_COOKIES_PATH=/data/tiktok_cookies.json

# Daily upload limit
TIKTOK_DAILY_UPLOAD_LIMIT=10

# ===================
# Ollama LLM Configuration
# ===================
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
OLLAMA_MODEL=llama3.1:8b

# ===================
# Email Notifications
# ===================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=your_notification_email@gmail.com

# ===================
# Monitoring
# ===================
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Enable/disable Prometheus metrics
METRICS_ENABLED=true

# Log format: 'json' for production, '' for human-readable
LOG_FORMAT=json
LOG_LEVEL=INFO

# ===================
# Rate Limiting
# ===================
REDDIT_RATE_LIMIT=30
OLLAMA_RATE_LIMIT=20
MAX_UPLOAD_RETRIES=3

# ===================
# File Management
# ===================
# Days to keep processed files before cleanup
FILE_RETENTION_DAYS=7

# ===================
# Backup Configuration
# ===================
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# ===================
# Scheduled Tasks (cron format)
# ===================
REDDIT_FETCH_HOUR=*/2
REDDIT_FETCH_MINUTE=0
REDDIT_FETCH_LIMIT=25
